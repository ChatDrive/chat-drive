{
  "extend": ["@commitlint/config-conventional"],
  "rules": {
    "body-leading-blank": [2, "always"],
    "header-max-length": [2, "never", 72],
    "type-enum": [
      2,
      "always",
      [
        "add",
        "del",
        "fix",
        "bump",
        "conf",
        "refactor",
        "reformat",
        "optimize",
        "doc",
        "start",
        "end"
      ]
    ]
  }
}

{
  "name": "chat-drive",
  "private": true,
  "version": "0.0.0",
  "description": "A cloud storage platform",
  "type": "commonjs",
  "config": {
    "commitizen": {
      "path": "cz-customizable"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "prepare": "husky install",
    "commit": "git add . && git cz",
    "changelog": "npx conventional-changelog -p gitmoji-config -i CHANGELOG.md -s -r 0",
    "eslint": "npx eslint src/** --ext .vue,.js,.ts,.jsx,.tsx --fix",
    "format": "npx prettier --write src/**/*.{vue,js,ts,jsx,tsx,json,css} ",
    "stylelint": "npx stylelint src/**/*.{css,vue} --fix"
  },
  "dependencies": {
    "vue": "^3.3.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "@vitejs/plugin-vue": "^4.2.3",
    "commitizen": "^4.3.0",
    "commitlint-config-cz": "^0.13.3",
    "commitlint-config-git-commit-emoji": "^1.0.0",
    "conventional-changelog-cli": "^4.1.0",
    "conventional-changelog-gitmoji-config": "^1.5.2",
    "cz-customizable": "^7.0.0",
    "eslint": "^8.51.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-vue": "^9.17.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "stylelint": "^14.x",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-standard": "^28",
    "stylelint-config-standard-vue": "^1.0.0",
    "stylelint-order": "^6.0.3",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vue-eslint-parser": "^9.3.2",
    "vue-tsc": "^1.8.5"
  }
}
